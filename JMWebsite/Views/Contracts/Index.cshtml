@model IEnumerable<JMWebsite.Models.Contract>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/creative.min.admin3.css" rel="stylesheet">
<br />
<br />
<div class="login-box animated fadeInUp">
    <div class="box-header">
        <h2>Contracts</h2>
    </div>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                &emsp;    &emsp;   &emsp; &emsp;   &emsp;  &emsp; @Html.DisplayNameFor(model => model._event.Name)
            </th>
            <th>
                &emsp;    &emsp;   &emsp; &emsp;   &emsp;  &emsp; &emsp; @Html.DisplayNameFor(model => model.ContractName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item._event.Name)
                </td>
                <td>
                    <a href="@Url.Content("~/ContractFiles/" + item.ContractName)">Contract</a>
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.EventID })
                </td>
            </tr>
        }

    </table>
</div>
