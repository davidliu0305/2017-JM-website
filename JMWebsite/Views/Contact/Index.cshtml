@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/creative.min.contact.css" rel="stylesheet">
<header>
    <div class="header-content">
        <div class="header-content-inner">
            <h1 id="homeHeading"></h1>

            <br>  <br>  <br> <br>   <br>  <br>  <br>  <br> <br>   <br> <br>  <br>  <br> <br> <br>  <br>  <br>  <h1> Contact Us </h1><br><br>   <br> <br>  <br> <br>   <br>

        </div>
    </div>
</header>
<div class="row">
    <div class="col-lg-3 col-lg-offset-1">
        <!--Contact Form-->
        <div class="login-box animated fadeInUp">
            <div class="top">
                <div class="box-header">
                    <h2 id="title">Get in Touch</h2>
                </div>
            </div>
            <p>
                Please fill out this quick form and we will be in touch with you as soon as we can.
            </p>
            <div>
                <input id="txtFName" placeholder="First Name" type="text" />
                <br />
                <input id="txtLName" placeholder="Last Name" type="text" />
                <br />
                <input id="txtEmail" placeholder="E-mail" type="text" />
                <br />
                <input id="txtPhone" placeholder="Phone" type="text" />
                <br />
                <textarea id="txtMessage" placeholder="Message" rows="6" cols="30"></textarea>
            </div>
            <!--Captcha-->
            <div class="row">
                <div class="col-md-12">
                    <br /> <p>   </p>    <form action="/home/validatecaptcha" method="POST">
                        <div class="g-recaptcha" data-sitekey="6LeujBQUAAAAADlAwtZfpxve5NiiO3BJ3WTd-pmF"></div>
                        <br />
                        <input name="btnSubmitContact" type="submit" value="Send">
                    </form>
                 
                </div>
            </div>
            
        </div>
        <br>
        <br>
        <br>
    </div>

        @section scripts{
            <script src="https://www.google.com/recaptcha/api.js" async defer></script>
        }
    <div class="col-lg-offset-3">
        <section>
            <div class="container">                  
                    <div class="col-lg-8 col-lg-offset-2 text-center">
                        <img src="/Images/JM-logo.jpg" alt="">
                        <h3 class="section-heading">Connect With Us</h3>
                        <hr class="primary">
                        <p>For any questions or inquiries:</p>
                    </div>
                    <div class="col-lg-4 col-lg-offset-2 text-center">
                        <i class="fa fa-phone fa-3x sr-contact"></i>
                        <p><a href="mailto:johnmichaels@bellnet.ca">johnmichaels@bellnet.ca</a><br />
                        Toll Free: 1-800-804-9323<br />
                        Office: 905-227-7072</p>
                    </div>
                    <div class="col-lg-4 text-center">
                        <i class="fa fa-envelope-o fa-3x sr-contact"></i>
                        <p>
                            JM Banquet Hall<br />
                            1368 Upper's Lane/Hwy. #58<br />
                            Thorold, ON<br />
                            L2V 3Y7
                        </p>
                    </div>
                    <div class="col-lg-8 col-lg-offset-2 text-center">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2913.7394883197603!2d-79.19965888452046!3d43.08897197914466!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89d34ffe49d22cad%3A0xb08cb935976c21d2!2sJohn-Michael&#39;s+Banquet!5e0!3m2!1sen!2sca!4v1486510266562" width="500" height="400" frameborder="0" style="border:0" allowfullscreen></iframe>
                    </div>
                
            </div>
        </section>
    </div>
</div>
<footer style="text-align:center; color:white; background-color:#161f32; height:50px; clear:both;">
    <br />
    &copy; @DateTime.Now.Year - JM's
    <br />
</footer> 
