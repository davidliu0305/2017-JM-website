@model IEnumerable<JMWebsite.Models.Client>

@{
    ViewBag.Title = "Client Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")

    @using (Html.BeginForm()){
        <p>Name: @Html.TextBox("SearchString") <br />
        <input type="submit" value="Filter"/> </p>
    }
</p>
<table class="table table-condensed">
       <tr>
           <th>
               @Html.DisplayNameFor(model => model.FullName)
           </th>
           <th>
               @Html.DisplayNameFor(model => model.cliPhone)
           </th>
           <th>
               @Html.DisplayNameFor(model => model.cliEmail)
           </th>
       </tr>

@foreach(var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cliPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cliEmail)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID}) |
            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
        </td>
    </tr>
}

</table>